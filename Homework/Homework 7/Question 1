import numpy as np 
import pandas as pd 

df_AOC = pd.read_json('AOC_recent_tweets (1).txt')
df_AOC_ID = df_AOC.loc[0:, 'id']
df_AOC_ID

import datetime as dt 
created_at = df_AOC.loc[:, 'created_at']
def time_in_hours(): 
    equation = created_at.dt.hour + created_at.dt.minute/60 + created_at.dt.second/3600
    return equation 
dec_hours = time_in_hours()
dec_hours

df_AOC.insert(1, 'hours', dec_hours)
df_AOC

df_inter = df_AOC.loc[:, 'created_at':'full_text']
df_tweets = df_inter.drop(columns = ['id', 'id_str'])
df_tweets

df_tweets.to_csv('df_tweets.csv')
